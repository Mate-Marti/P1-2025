<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" style="-fx-padding:15;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.preparcial3.viewController.VentasViewController">
    <HBox spacing="15">
        <VBox spacing="5">
            <Label text="Fecha (automÃ¡tica)" />
            <TextField fx:id="txtFecha" editable="false">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor></TextField>
            <Label text="Cliente" />
            <ComboBox fx:id="comboCliente">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor></ComboBox>
            <Label text="Producto" />
            <ComboBox fx:id="comboProducto">
            <cursor>
               <Cursor fx:constant="OPEN_HAND" />
            </cursor></ComboBox>
            <Label text="Cantidad" />
            <Spinner fx:id="spinnerCantidad" initialValue="1" max="100" min="1">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor></Spinner>
        </VBox>
        <VBox spacing="10">
            <Button fx:id="btnGuardar" text="Guardar Venta">
            <cursor>
               <Cursor fx:constant="HAND" />
            </cursor></Button>
        </VBox>
    </HBox>

    <TableView fx:id="tablaItems">
        <columns>
            <TableColumn fx:id="colProducto" text="Producto" />
            <TableColumn fx:id="colCantidad" text="Cantidad" />
            <TableColumn fx:id="colTotal" text="Total" />
        </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
      <cursor>
         <Cursor fx:constant="OPEN_HAND" />
      </cursor>
    </TableView>
</VBox>
