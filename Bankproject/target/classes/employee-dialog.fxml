<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefWidth="450.0" spacing="15.0" style="-fx-font-family: 'Times New Roman';-fx-background-color: #f9f9f9; -fx-padding: 25;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proyect.bankproject.Controller.EmployeeDialogController">

    <Label fx:id="titleLabel" style="-fx-font-family: 'Times New Roman';-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #003366;" text="Formulario Registro Empleado">
      <font>
         <Font name="Times New Roman" size="15.0" />
      </font></Label>

    <GridPane alignment="TOP_CENTER" hgap="10.0" vgap="10.0">
        <Label text="ID Empleado:" GridPane.columnIndex="0" GridPane.rowIndex="0">
         <font>
            <Font name="Times New Roman" size="15.0" />
         </font></Label>
        <TextField fx:id="idField" promptText="ID Empleado" GridPane.columnIndex="1" GridPane.rowIndex="0">
         <font>
            <Font name="Times New Roman" size="15.0" />
         </font>
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor></TextField>

        <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="1">
         <font>
            <Font name="Times New Roman" size="15.0" />
         </font></Label>
        <TextField fx:id="nameField" promptText="Nombre" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <font>
            <Font name="Times New Roman" size="15.0" />
         </font>
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor></TextField>

        <Label text="Apellido:" GridPane.columnIndex="0" GridPane.rowIndex="2">
         <font>
            <Font name="Times New Roman" size="15.0" />
         </font></Label>
        <TextField fx:id="lastNameField" promptText="Apellido" GridPane.columnIndex="1" GridPane.rowIndex="2">
         <font>
            <Font name="Times New Roman" size="15.0" />
         </font>
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor></TextField>

        <Label text="Fecha de Nacimiento:" GridPane.columnIndex="0" GridPane.rowIndex="3">
         <font>
            <Font name="Times New Roman" size="15.0" />
         </font></Label>
        <DatePicker fx:id="birthDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Usuario (Username):" GridPane.columnIndex="0" GridPane.rowIndex="4">
         <font>
            <Font name="Times New Roman" size="15.0" />
         </font></Label>
        <TextField fx:id="usernameField" promptText="Usuario para login" GridPane.columnIndex="1" GridPane.rowIndex="4">
         <font>
            <Font name="Times New Roman" size="15.0" />
         </font>
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor></TextField>

        <Label text="Contraseña:" GridPane.columnIndex="0" GridPane.rowIndex="5">
         <font>
            <Font name="Times New Roman" size="15.0" />
         </font></Label>
        <PasswordField fx:id="passwordField" promptText="Dejar vacío para no cambiar" GridPane.columnIndex="1" GridPane.rowIndex="5">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
         <font>
            <Font name="Times New Roman" size="15.0" />
         </font></PasswordField>

        <Label text="Salario:" GridPane.columnIndex="0" GridPane.rowIndex="6">
         <font>
            <Font name="Times New Roman" size="15.0" />
         </font></Label>
        <TextField fx:id="salaryField" promptText="Salario (Ej: 2000000)" GridPane.columnIndex="1" GridPane.rowIndex="6">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor>
         <font>
            <Font name="Times New Roman" size="15.0" />
         </font></TextField>

        <Label text="Rol:" GridPane.columnIndex="0" GridPane.rowIndex="7">
         <font>
            <Font name="Times New Roman" size="15.0" />
         </font></Label>
        <ComboBox fx:id="roleComboBox" promptText="Seleccionar Rol..." GridPane.columnIndex="1" GridPane.rowIndex="7">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></ComboBox>
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>

    <Label fx:id="errorLabel" textFill="red" />

    <Button fx:id="saveButton" mnemonicParsing="false" style="-fx-font-family: 'Times New Roman';-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;" text="Guardar Cambios">
      <font>
         <Font name="Times New Roman" size="15.0" />
      </font>
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor></Button>

</VBox>
