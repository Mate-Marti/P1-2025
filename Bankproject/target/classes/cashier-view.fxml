<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="700.0" prefWidth="1000.0" spacing="10.0" style="-fx-font-family: 'Times New Roman';-fx-background-color: #f4f4f4; -fx-padding: 15;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proyect.bankproject.Controller.CashierViewController">

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label fx:id="welcomeLabel" style="-fx-font-family: 'Times New Roman';-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #003366;" text="Bienvenido, Cajero [Nombre]">
            <font>
                <Font name="Times New Roman Bold" size="15.0" />
            </font>
        </Label>

        <Region HBox.hgrow="ALWAYS" />

        <Button fx:id="logoutButton" onAction="#handleLogout" style="-fx-font-family: 'Times New Roman'; -fx-background-color: #d9534f; -fx-text-fill: white; -fx-font-weight: bold;" text="Cerrar Sesión">
            <font><Font name="Times New Roman" size="14.0" /></font>
            <cursor><Cursor fx:constant="HAND" /></cursor>
        </Button>
    </HBox>
    <Label fx:id="errorLabel" style="-fx-font-family: 'Times New Roman';-fx-font-size: 16px; -fx-font-weight: bold;" textFill="red" />

    <TabPane fx:id="tabPane" VBox.vgrow="ALWAYS">

        <Tab text="Operaciones en Cuenta">
            <AnchorPane>
                <VBox alignment="TOP_CENTER" spacing="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">

                    <HBox alignment="CENTER" spacing="10.0" style="-fx-font-family: 'Times New Roman';-fx-padding: 20; -fx-background-color: #ffffff; -fx-background-radius: 10;">
                        <Label style="-fx-font-family: 'Times New Roman';-fx-font-size: 16px;" text="Número de Cuenta del Cliente:">
                            <font><Font name="Times New Roman" size="15.0" /></font>
                        </Label>
                        <TextField fx:id="searchField" prefWidth="200.0" promptText="Ej: 111-222-01">
                            <font><Font name="Times New Roman" size="15.0" /></font>
                     <cursor>
                        <Cursor fx:constant="TEXT" />
                     </cursor>
                        </TextField>
                        <Button fx:id="searchButton" style="-fx-font-family: 'Times New Roman';-fx-background-color: #0078d4; -fx-text-fill: white; -fx-font-weight: bold;" text="Buscar Cuenta">
                            <font><Font name="Times New Roman" size="15.0" /></font>
                            <cursor><Cursor fx:constant="HAND" /></cursor>
                        </Button>
                    </HBox>

                    <VBox fx:id="detailsPane" alignment="TOP_CENTER" spacing="15.0" style="-fx-font-family: 'Times New Roman';-fx-background-color: #ffffff; -fx-background-radius: 10; -fx-padding: 25;" visible="false">
                        <Label style="-fx-font-family: 'Times New Roman';-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #003366;" text="Detalles de la Cuenta" />
                        <HBox spacing="10.0">
                            <Label style="-fx-font-family: 'Times New Roman';-fx-font-weight: bold;" text="Cliente:" />
                            <Label fx:id="clientNameLabel" text="[Nombre del Cliente]" />
                        </HBox>
                        <HBox spacing="10.0">
                            <Label style="-fx-font-family: 'Times New Roman';-fx-font-weight: bold;" text="Saldo Actual:" />
                            <Label fx:id="balanceLabel" style="-fx-font-family: 'Times New Roman';-fx-font-size: 16px;" text="0.00" />
                        </HBox>

                        <HBox alignment="CENTER" spacing="10.0" style="-fx-font-family: 'Times New Roman';-fx-border-color: #e0e0e0; -fx-border-width: 1 0 0 0; -fx-padding: 20 0 0 0;">
                            <Label style="-fx-font-family: 'Times New Roman';-fx-font-size: 14px;" text="Monto:" />
                            <TextField fx:id="amountField" prefWidth="150.0" promptText="Ej: 50000" />
                            <Button fx:id="depositButton" style="-fx-font-family: 'Times New Roman';-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;" text="Depositar" />
                            <Button fx:id="withdrawButton" style="-fx-font-family: 'Times New Roman';-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold;" text="Retirar" />
                        </HBox>
                        <Button fx:id="transferButton" style="-fx-font-family: 'Times New Roman';-fx-background-color: #0078d4; -fx-text-fill: white; -fx-font-weight: bold;" text="Realizar Transferencia..." />
                    </VBox>
                </VBox>
            </AnchorPane>
        </Tab>

        <Tab text="Registrar Cliente">
            <AnchorPane>
                <VBox alignment="TOP_CENTER" spacing="15.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="20.0">
                    <Label style="-fx-font-family: 'Times New Roman';-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #003366;" text="Formulario de Nuevo Cliente">
                        <font><Font name="Times New Roman" size="15.0" /></font>
                    </Label>

                    <GridPane hgap="10.0" maxWidth="600.0" style="-fx-font-family: 'Times New Roman';-fx-padding: 20; -fx-background-color: #ffffff; -fx-background-radius: 10;" vgap="10.0">
                        <Label text="Cédula:" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <font><Font name="Times New Roman" size="15.0" /></font>
                        </Label>
                        <TextField fx:id="regIdField" promptText="Cédula" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <font><Font name="Times New Roman" size="15.0" /></font>
                            <cursor><Cursor fx:constant="TEXT" /></cursor>
                        </TextField>

                        <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="1">
                            <font><Font name="Times New Roman" size="15.0" /></font>
                        </Label>
                        <TextField fx:id="regNameField" promptText="Nombre" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <font><Font name="Times New Roman" size="15.0" /></font>
                            <cursor><Cursor fx:constant="TEXT" /></cursor>
                        </TextField>

                        <Label text="Apellido:" GridPane.columnIndex="0" GridPane.rowIndex="2">
                            <font><Font name="Times New Roman" size="15.0" /></font>
                        </Label>
                        <TextField fx:id="regLastNameField" promptText="Apellido" GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <font><Font name="Times New Roman" size="15.0" /></font>
                            <cursor><Cursor fx:constant="TEXT" /></cursor>
                        </TextField>

                        <Label text="Fecha de Nacimiento:" GridPane.columnIndex="0" GridPane.rowIndex="3">
                            <font><Font name="Times New Roman" size="15.0" /></font>
                        </Label>
                        <DatePicker fx:id="regBirthDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Label text="Usuario (Username):" GridPane.columnIndex="0" GridPane.rowIndex="4">
                            <font><Font name="Times New Roman" size="15.0" /></font>
                        </Label>
                        <TextField fx:id="regUsernameField" promptText="Usuario para login" GridPane.columnIndex="1" GridPane.rowIndex="4">
                            <font><Font name="Times New Roman" size="15.0" /></font>
                            <cursor><Cursor fx:constant="TEXT" /></cursor>
                        </TextField>

                        <Label text="Contraseña:" GridPane.columnIndex="0" GridPane.rowIndex="5">
                            <font><Font name="Times New Roman" size="15.0" /></font>
                        </Label>
                        <PasswordField fx:id="regPasswordField" promptText="Contraseña" GridPane.columnIndex="1" GridPane.rowIndex="5">
                            <font><Font name="Times New Roman" size="15.0" /></font>
                            <cursor><Cursor fx:constant="TEXT" /></cursor>
                        </PasswordField>

                        <Button fx:id="registerButton" style="-fx-font-family: 'Times New Roman';-fx-background-color: #0078d4; -fx-text-fill: white; -fx-font-weight: bold;" text="Registrar Nuevo Cliente" GridPane.columnIndex="1" GridPane.rowIndex="6">
                            <font><Font name="Times New Roman" size="15.0" /></font>
                            <cursor><Cursor fx:constant="HAND" /></cursor>
                        </Button>
                        <columnConstraints>
                            <ColumnConstraints />
                            <ColumnConstraints />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                        </rowConstraints>
                    </GridPane>
                </VBox>
            </AnchorPane>
        </Tab>

        <Tab text="Generar Reporte">
            <AnchorPane>
                <VBox alignment="TOP_CENTER" spacing="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">

                    <Label style="-fx-font-family: 'Times New Roman';-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #003366;" text="Generar Reporte de Cliente">
                        <font><Font name="Times New Roman" size="15.0" /></font>
                    </Label>

                    <HBox alignment="CENTER" spacing="10.0" style="-fx-font-family: 'Times New Roman';-fx-padding: 20; -fx-background-color: #ffffff; -fx-background-radius: 10;">
                        <Label style="-fx-font-family: 'Times New Roman';-fx-font-size: 16px;" text="Número de Cuenta del Cliente:">
                            <font><Font name="Times New Roman" size="15.0" /></font>
                        </Label>
                        <TextField fx:id="reportSearchField" prefWidth="200.0" promptText="Ej: 111-222-01">
                            <font><Font name="Times New Roman" size="15.0" /></font>
                            <cursor><Cursor fx:constant="TEXT" /></cursor>
                        </TextField>
                        <Button fx:id="reportButton" style="-fx-font-family: 'Times New Roman';-fx-background-color: #17a2b8; -fx-text-fill: white; -fx-font-weight: bold;" text="Generar Reporte">
                            <font><Font name="Times New Roman" size="15.0" /></font>
                            <cursor><Cursor fx:constant="HAND" /></cursor>
                        </Button>
                    </HBox>

                    <TextArea fx:id="reportArea" editable="false" promptText="El reporte del cliente aparecerá aquí..." style="-fx-font-family: 'Times New Roman';" VBox.vgrow="ALWAYS">
                        <font><Font name="Times New Roman" size="15.0" /></font>
                    </TextArea>
                </VBox>
            </AnchorPane>
        </Tab>

    </TabPane>
</VBox>
