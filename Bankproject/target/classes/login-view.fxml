<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="rootPane" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="400.0" prefWidth="380.0" style="-fx-font-family: 'Times New Roman';-fx-background-color: #f7f3ed;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proyect.bankproject.Controller.LoginController"> <VBox alignment="CENTER" maxWidth="350.0" prefHeight="320.0" prefWidth="350.0" spacing="15.0" style="-fx-background-color: #ffffff; -fx-background-radius: 15; -fx-border-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);" VBox.vgrow="NEVER">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
    <Label text="Bienvenido a Sula Bank" textFill="#003366">
        <font>
            <Font name="Times New Roman Bold" size="25.0" />
        </font>
        <VBox.margin>
            <Insets bottom="5.0" />
        </VBox.margin>
    </Label>
    <Label text="Accede a tu cuenta" textFill="#6a6a6a">
        <font>
            <Font name="Times New Roman" size="15.0" />
        </font>
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Label>

    <Label alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" text="Usuario:" textFill="#6a6a6a">
        <font>
            <Font name="Times New Roman" size="15.0" />
        </font>
    </Label>
    <TextField fx:id="usernameField" promptText="Ingrese su usuario" style="-fx-font-family: 'Times New Roman';-fx-border-color: #d0d0d0; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8 10;">
         <font>
            <Font name="Times New Roman" size="15.0" />
         </font>
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor></TextField>

    <Label alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" text="Contraseña:" textFill="#6a6a6a">
        <font>
            <Font name="Times New Roman" size="15.0" />
        </font>
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </Label>
    <PasswordField fx:id="passwordField" promptText="Ingrese su contraseña" style="-fx-font-family: 'Times New Roman';-fx-border-color: #d0d0d0; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8 10;">
         <font>
            <Font name="Times New Roman" size="15.0" />
         </font>
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor></PasswordField>

    <Button fx:id="loginButton" mnemonicParsing="false" onAction="#onLoginButtonClick" prefHeight="26.0" prefWidth="119.0" style="-fx-font-family: 'Times New Roman';-fx-background-color: #0078d4; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Ingresar">
         <font>
            <Font name="Times New Roman" size="15.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>

    <Label fx:id="errorLabel" textFill="#d40000">
        <font>
            <Font name="Times New Roman" size="12.0" />
        </font>
        <VBox.margin>
            <Insets top="5.0" />
        </VBox.margin>
    </Label>
</VBox>
</VBox>
