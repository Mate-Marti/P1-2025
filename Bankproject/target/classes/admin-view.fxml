<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="700.0" prefWidth="1000.0" spacing="10.0" style="-fx-font-family: 'Times New Roman';-fx-background-color: #f4f4f4; -fx-padding: 15;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proyect.bankproject.Controller.AdminViewController">

<HBox alignment="CENTER_LEFT" prefHeight="31.0" prefWidth="970.0" spacing="10.0">
    <Label fx:id="welcomeLabel" style="-fx-font-family: 'Times New Roman'; -fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #003366;" text="Bienvenido, Administrador [Nombre]">
        <font><Font name="Times New Roman" size="20.0" /></font>
    </Label>

    <Region HBox.hgrow="ALWAYS" />

    <Button fx:id="logoutButton" onAction="#handleLogout" style="-fx-font-family: 'Times New Roman'; -fx-background-color: #d9534f; -fx-text-fill: white; -fx-font-weight: bold;" text="Cerrar Sesión">
        <font><Font name="Times New Roman" size="14.0" /></font>
        <cursor><Cursor fx:constant="HAND" /></cursor>
    </Button>
</HBox>

<Label fx:id="errorLabel" style="-fx-font-family: 'Times New Roman'; -fx-font-size: 16px; -fx-font-weight: bold;" textFill="red" />

<TabPane fx:id="tabPane" prefWidth="970.0" style="-fx-font-family: 'Times New Roman';" VBox.vgrow="ALWAYS">

    <Tab text="Gestión de Empleados">
        <AnchorPane>
            <VBox spacing="15.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">

                <TableView fx:id="employeesTableView" style="-fx-font-family: 'Times New Roman';" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colEmployeeId" prefWidth="100" text="ID Empleado" />
                        <TableColumn fx:id="colEmployeeName" prefWidth="150" text="Nombre" />
                        <TableColumn fx:id="colEmployeeUsername" prefWidth="120" text="Usuario" />
                        <TableColumn fx:id="colEmployeeRole" prefWidth="120" text="Rol" />
                        <TableColumn fx:id="colEmployeeSalary" prefWidth="120" text="Salario" />
                    </columns>
                    <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                </TableView>

                <HBox alignment="CENTER" spacing="10.0">
                    <Button fx:id="registerEmployeeButton" style="-fx-font-family: 'Times New Roman';-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;" text="Registrar Nuevo Empleado">
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                        <font>
                            <Font name="Times New Roman" size="15.0" />
                        </font></Button>
                    <Button fx:id="modifyEmployeeButton" style="-fx-font-family: 'Times New Roman';-fx-background-color: #0078d4; -fx-text-fill: white; -fx-font-weight: bold;" text="Modificar Empleado Seleccionado">
                        <font>
                            <Font name="Times New Roman" size="15.0" />
                        </font>
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor></Button>
                    <Button fx:id="deleteEmployeeButton" style="-fx-font-family: 'Times New Roman';-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold;" text="Eliminar Empleado Seleccionado">
                        <font>
                            <Font name="Times New Roman" size="15.0" />
                        </font>
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor></Button>
                </HBox>

            </VBox>
        </AnchorPane>
    </Tab>

    <Tab text="Reportes y Monitoreo">
        <AnchorPane>
            <VBox spacing="15.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
                <Label style="-fx-font-family: 'Times New Roman'; -fx-font-size: 18px; -fx-font-weight: bold;" text="Panel de Reportes">
                    <font><Font name="Times New Roman" size="15.0" /></font>
                </Label>

                <HBox alignment="CENTER" spacing="10.0">
                    <Button fx:id="reportAllTransactionsButton" style="-fx-font-family: 'Times New Roman'; -fx-background-color: #17a2b8; -fx-text-fill: white;" text="Reporte de Transacciones">
                        <font><Font name="Times New Roman" size="15.0" /></font>
                        <cursor><Cursor fx:constant="HAND" /></cursor>
                    </Button>
                    <Button fx:id="reportUserActivityButton" style="-fx-font-family: 'Times New Roman'; -fx-background-color: #17a2b8; -fx-text-fill: white;" text="Reporte de Actividad de Usuarios">
                        <cursor><Cursor fx:constant="HAND" /></cursor>
                        <font><Font name="Times New Roman" size="15.0" /></font>
                    </Button>
                </HBox>

                <TextArea fx:id="reportArea" editable="false" promptText="El reporte seleccionado aparecerá aquí..." style="-fx-font-family: 'Times New Roman';" VBox.vgrow="ALWAYS">
                    <font><Font name="Times New Roman" size="15.0" /></font>
                </TextArea>
            </VBox>
        </AnchorPane>
    </Tab>

</TabPane>
</VBox>
