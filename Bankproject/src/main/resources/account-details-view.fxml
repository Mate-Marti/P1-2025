<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="620.0" prefWidth="750.0" spacing="20.0" style="-fx-font-family: 'Times New Roman'; -fx-background-color: #f9f9f9;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proyect.bankproject.Controller.AccountDetailsController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <VBox alignment="CENTER" style="-fx-font-family: 'Times New Roman';-fx-background-color: #ffffff; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 3);">

        <Label fx:id="accountTypeLabel" style="-fx-font-family: 'Times New Roman'; -fx-font-weight: bold; -fx-font-size: 18px;" text="Tipo de Cuenta: [TIPO]" textFill="#003366">
         <font>
            <Font name="Times New Roman" size="15.0" />
         </font></Label>

        <Label style="-fx-font-family: 'Times New Roman'; -fx-font-size: 14px;" text="Saldo Disponible">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
         <font>
            <Font name="Times New Roman" size="15.0" />
         </font>
        </Label>

        <Label fx:id="balanceLabel" style="-fx-font-family: 'Times New Roman'; -fx-font-weight: bold; -fx-font-size: 36px;" text="0.00" textFill="#003366">
         <font>
            <Font name="Times New Roman" size="15.0" />
         </font></Label>
    </VBox>

    <HBox alignment="CENTER" spacing="15.0">
        <Button fx:id="transferButton" mnemonicParsing="false" style="-fx-font-family: 'Times New Roman';-fx-background-color: #0078d4; -fx-text-fill: white; -fx-font-weight: bold;" text="Realizar Transferencia">
         <font>
            <Font name="Times New Roman" size="15.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
    </HBox>

    <VBox VBox.vgrow="ALWAYS">
        <Label style="-fx-font-family: 'Times New Roman'; -fx-font-weight: bold; -fx-font-size: 16px;" text="Historial de Transacciones">
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
         <font>
            <Font name="Times New Roman" size="15.0" />
         </font>
        </Label>
        <ListView fx:id="transactionsListView" VBox.vgrow="ALWAYS" />
    </VBox>
</VBox>
