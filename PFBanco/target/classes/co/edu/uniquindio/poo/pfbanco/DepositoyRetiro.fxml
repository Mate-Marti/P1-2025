<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.pfbanco.viewController.DepositoyRetiroViewController">
   <children>
      <Label fx:id="lblTitulo" layoutX="178.0" layoutY="31.0" prefHeight="58.0" prefWidth="344.0" text="Depósitos y Retiros" textFill="#5b9954">
         <font>
            <Font size="40.0" />
         </font>
      </Label>

      <TableView fx:id="tablaCuentas" layoutX="50.0" layoutY="100.0" prefHeight="200.0" prefWidth="600.0">
         <columns>
            <TableColumn fx:id="colNumCuenta" prefWidth="150.0" text="ID Cuenta" />
            <TableColumn fx:id="colPropietario" prefWidth="250.0" text="Nombre Propietario" />
            <TableColumn fx:id="colSaldoActual" prefWidth="200.0" text="Saldo Actual" />
         </columns>
      </TableView>

      <VBox alignment="CENTER" layoutX="196.0" layoutY="300.0" prefHeight="200.0" prefWidth="300.0" spacing="15.0">
         <children>
            <Label text="Monto de la Transacción" />
            <TextField fx:id="txtMonto" promptText="Monto (Ej: 50000)" />

            <Label fx:id="lblMensaje" text="" textFill="RED" />
            <Button fx:id="btnRetirar" mnemonicParsing="false" onAction="#retirarAction" prefHeight="30.0" prefWidth="52.0" text="Retirar" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>

      <Button fx:id="btnDepositar" layoutX="124.0" layoutY="441.0" mnemonicParsing="false" onAction="#depositarAction" prefHeight="30.0" prefWidth="72.0" text="Depositar" />
      <Button fx:id="btnVolver" layoutX="518.0" layoutY="441.0" mnemonicParsing="false" onAction="#volverAction" prefHeight="30.0" prefWidth="52.0" text="Volver" />
   </children>
</AnchorPane>
