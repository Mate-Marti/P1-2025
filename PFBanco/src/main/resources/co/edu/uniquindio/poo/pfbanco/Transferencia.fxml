<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="611.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.pfbanco.viewController.TransferenciaViewController">
   <children>
      <Label fx:id="lblTitulo" layoutX="208.0" layoutY="29.0" prefHeight="58.0" prefWidth="384.0" text="Transferencias entre Cuentas" textFill="#5b9954">
         <font>
            <Font size="30.0" />
         </font>
      </Label>

      <HBox layoutX="50.0" layoutY="100.0" prefHeight="300.0" prefWidth="700.0" spacing="50.0">
         <children>
            <VBox prefHeight="300.0" prefWidth="350.0" spacing="10.0">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Seleccione Cuenta de Origen:" />
                  <TableView fx:id="tablaOrigen" prefHeight="260.0" prefWidth="350.0">
                     <columns>
                        <TableColumn fx:id="colNumCuentaOrigen" prefWidth="93.00000381469727" text="ID Cuenta" />
                        <TableColumn fx:id="colPropietarioOrigen" prefWidth="137.3999786376953" text="Propietario" />
                        <TableColumn fx:id="colSaldoOrigen" prefWidth="94.0" text="Saldo" />
                     </columns>
                  </TableView>
               </children>
            </VBox>

            <VBox prefHeight="300.0" prefWidth="350.0" spacing="10.0">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Seleccione Cuenta de Destino:" />
                  <TableView fx:id="tablaDestino" prefHeight="260.0" prefWidth="350.0">
                     <columns>
                        <TableColumn fx:id="colNumCuentaDestino" prefWidth="100.0" text="ID Cuenta" />
                        <TableColumn fx:id="colPropietarioDestino" prefWidth="140.0" text="Propietario" />
                        <TableColumn fx:id="colSaldoDestino" prefWidth="84.39994812011719" text="Saldo" />
                     </columns>
                  </TableView>
               </children>
            </VBox>
         </children>
      </HBox>

      <VBox alignment="CENTER" layoutX="250.0" layoutY="388.0" prefHeight="158.0" prefWidth="300.0" spacing="15.0">
         <children>
            <Label style="-fx-font-weight: bold;" text="Monto a Transferir" />
            <TextField fx:id="txtMonto" promptText="Monto (Ej: 50000)" />

            <Label fx:id="lblMensaje" text="" textFill="RED" />

            <Button fx:id="btnTransferir" mnemonicParsing="false" onAction="#transferirAction" prefHeight="29.0" prefWidth="133.0" text="Realizar Transferencia" />
            <Button fx:id="btnVolver" mnemonicParsing="false" onAction="#volverAction" prefHeight="30.0" prefWidth="55.0" text="Volver" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>

   </children>
</AnchorPane>
