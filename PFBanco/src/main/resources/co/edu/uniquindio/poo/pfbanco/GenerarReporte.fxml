<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="650.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.pfbanco.viewController.GenerarReporteViewController">

   <children>

      <Label layoutX="120" layoutY="20" text="GeneraciÃ³n de Reportes" textFill="#5b9954">
         <font>
            <Font size="36"/>
         </font>
      </Label>

      <!-- Tabla -->
      <TableView fx:id="tablaClientes" layoutX="50" layoutY="90"
                 prefWidth="550" prefHeight="180">
         <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="120"/>
            <TableColumn fx:id="colNombre" text="Nombre" prefWidth="180"/>
            <TableColumn fx:id="colUsuario" text="Usuario" prefWidth="140"/>
            <TableColumn fx:id="colReporte" text="Reporte" prefWidth="200"/>
         </columns>
      </TableView>

      <!-- Cuadro de reporte -->
      <Label layoutX="50" layoutY="290" text="Reporte:"/>
      <TextArea fx:id="txtReporte" layoutX="50" layoutY="310"
                prefWidth="550" prefHeight="70"/>

      <!-- Botones -->
      <Button fx:id="btnGuardar" layoutX="50" layoutY="390"
              prefWidth="100" text="Guardar" onAction="#guardarReporte"/>

      <Button fx:id="btnVolver" layoutX="500" layoutY="390"
              prefWidth="100" text="Volver" onAction="#volver"/>

   </children>

</AnchorPane>