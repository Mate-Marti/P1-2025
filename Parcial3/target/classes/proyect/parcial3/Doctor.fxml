<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="20.0" prefHeight="700" prefWidth="1500"  xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proyect.parcial3.ViewController.DoctorController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Gestión de Médicos">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <VBox spacing="10.0">
            <HBox spacing="10.0">
                <TextField fx:id="txtName" promptText="Nombre Completo" HBox.hgrow="ALWAYS" />
                <TextField fx:id="txtId" prefWidth="120.0" promptText="Cédula" />
                <TextField fx:id="txtAge" prefWidth="60.0" promptText="Edad" />
                <TextField fx:id="txtGenre" prefWidth="80.0" promptText="Género" />
            </HBox>
            <HBox spacing="10.0">
                <TextField fx:id="txtLicense" promptText="Número Licencia" />
                <TextField fx:id="txtSpecialization" promptText="Especialidad" HBox.hgrow="ALWAYS" />
                <Button mnemonicParsing="false" onAction="#addDoctor" style="-fx-background-color: #2c3e50;" text="Registrar Médico" textFill="WHITE" />
                <Button onAction="#updateDoctor" style="-fx-background-color: #f39c12;" text="Actualizar" textFill="WHITE" />
                <Button onAction="#deleteDoctor" style="-fx-background-color: #c0392b;" text="Eliminar" textFill="WHITE" />
            </HBox>
        </VBox>

        <TableView fx:id="tableDoctors" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colName" text="Nombre" />
                <TableColumn fx:id="colSpecialization" text="Especialidad" />
                <TableColumn fx:id="colLicense" text="Licencia" />
            </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
        </TableView>
    </children>
</VBox>
