<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="700" prefWidth="1500" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proyect.parcial3.ViewController.PatientController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Gestión de Pacientes">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <HBox spacing="10.0">
            <children>
                <TextField fx:id="txtName" promptText="Nombre Completo" HBox.hgrow="ALWAYS" />
                <TextField fx:id="txtId" prefWidth="100.0" promptText="Cédula" />
                <TextField fx:id="txtAge" prefWidth="60.0" promptText="Edad" />
                <TextField fx:id="txtGenre" promptText="Género (M/F)" />
                <TextField fx:id="txtBloodType" promptText="Tipo Sangre" />
                <TextField fx:id="txtEps" promptText="EPS" />
                <Button mnemonicParsing="false" onAction="#addPatient" style="-fx-background-color: #2c3e50;" text="Agregar" textFill="WHITE" />
                <Button onAction="#updatePatient" style="-fx-background-color: #f39c12;" text="Actualizar" textFill="WHITE" />
                <Button onAction="#deletePatient" style="-fx-background-color: #c0392b;" text="Eliminar" textFill="WHITE" />
            </children>
        </HBox>

        <TableView fx:id="tablePatients" prefWidth="1210.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colName" text="Nombre" />
                <TableColumn fx:id="colId" text="Cédula" />
                <TableColumn fx:id="colEps" text="EPS" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>
